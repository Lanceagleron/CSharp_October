@model List<Dish>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to CRUDeliscious</h1>
    <a href="/">Home</a>|<a href="/dishes/new">Add Dishes</a>
</div>


@foreach (Dish dish in Model)
{
    <div class="card shadow rounded mx-auto w-75 mb-3">
        <a  
        asp-controller="Dishes"
        asp-action="GetOneDish"
        asp-route-dishId="@dish.DishId"
        class="card-title text-center bg-dark text-light py-2 rounded-top"
        >
        @dish.Name
        </a>

        <div class="card-body">
            <p class="card-text">by @dish.Chef</p>
            <small class="text-muted"> Submitted on: @dish.CreatedAt </small>
        </div>
    </div>
}