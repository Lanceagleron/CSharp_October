@model Post

<div class="container w75 mx- auto">
    <h1 class="text-center">New Post</h1>

    <form class="shadow p-3 rounded" asp-controller="Posts" asp-action="Create"  method="POST">
        <div class="mb-3">
            <label asp-for="Topic"></label>
            <span asp-validation-for="Topic" class="text-danger font-weight-bold"></span>
            <input class="form-control" asp-for="Topic"/>
        </div>

        <div class="mb-3">
            <label asp-for="Body"></label>
            <span asp-validation-for="Body" class="text-danger font-weight-bold"></span>
            <input class="form-control" asp-for="Body" />
        </div>

        <div class="mb-3">
            <label asp-for="ImgUrl"></label>
            <input class="form-control" asp-for="ImgUrl" />
        </div>
        <button class="btn btn-success">Submit</button>
    </form>
</div>

